@{
    ViewData["Title"] = "Route Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Route Management</h4>
    <button class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add New Route</button>
</div>

<div class="card">
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-3">
                <select class="form-select">
                    <option>Filter by Status</option>
                    <option>Active</option>
                    <option>Inactive</option>
                    <option>Under Maintenance</option>
                </select>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Route Name</th>
                        <th>Departure Station</th>
                        <th>Arrival Station</th>
                        <th>Segments</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Express North</td>
                        <td>Central Station</td>
                        <td>North Terminal</td>
                        <td>4</td>
                        <td><span class="badge bg-success">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#routeModal"><i class="bi bi-eye"></i></button>
                            <button class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>Coastal Line</td>
                        <td>West Bay</td>
                        <td>Harbor City</td>
                        <td>3</td>
                        <td><span class="badge bg-warning">Maintenance</span></td>
                        <td>
                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#routeModal"><i class="bi bi-eye"></i></button>
                            <button class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Route Modal -->
<div class="modal fade" id="routeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Route Details: Express North</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>Route Segments</h6>
                <div class="route-segments">
                    <div class="segment-item">
                        <div class="segment-station">Central Station</div>
                        <div class="segment-line"></div>
                        <div class="segment-station">Midtown</div>
                        <div class="segment-line"></div>
                        <div class="segment-station">Uptown</div>
                        <div class="segment-line"></div>
                        <div class="segment-station">North Terminal</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
